@using OnlineShop.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New User</a>
    </div>
</div>
<br/>
<div>
     <table class="table table-striped border">
         <tr class="table-info">
             <th>
                  Name
             </th>
             
             <th></th>
            <th></th>
            <th></th>

         </tr>
         @foreach(var item in ViewBag.Roles )
        {
            <tr>
                
                <td>@item.Name</td>
                <td></td>
                <td></td>
                   <td style="width:150px">
                   <div class="btn-group">
                       
        <a asp-action="Edit" asp-controller="Role" class="btn btn-primary" asp-route-id="@item.Id">
            <i class="fas fa-edit"></i></a>
@*        <a asp-action="Details" asp-controller="User" class="btn btn-success" asp-route-id="@Model"><i class="fas fa-list-alt"></i></a>
*@
        <a asp-action="Delete" asp-controller="Role" class="btn btn-danger" asp-route-id="@item.Id">
            <i class="fas fa-trash-alt"></i></a>

                   </div>
                 
                  </td>
               
            </tr>
        }
    </table>
</div>


@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}
